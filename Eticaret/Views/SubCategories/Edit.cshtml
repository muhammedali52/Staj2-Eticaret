@model Eticaret.Models.SubCategory

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>SubCategory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SubCategory_Id" />

            <div class="form-group">
                <label asp-for="Category_Id" class="control-label"></label>
                <select asp-for="Category_Id" asp-items="@ViewBag.Category_Id" class="form-control">
                    <option value="">--seçim yapınız--</option>
                </select>
                <span asp-validation-for="Category_Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SubCategory_Name" class="control-label"></label>
                <input asp-for="SubCategory_Name" class="form-control" />
                <span asp-validation-for="SubCategory_Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
